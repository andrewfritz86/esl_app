

<div class="container">
  <div class="row">
    <div class="two columns"></div>
    <div class="eight columns">
      <%= form_for @user do |f| %>
        <h6> What's your email address? &nbsp; &nbsp; </h6>
        <%= f.text_field :email%></br>
        <h6> What's your name? &nbsp; &nbsp; </h6>
        <%= f.text_field :name%></br>
        <h6> Where are you from? &nbsp; &nbsp; </h6>
        <%= f.text_field :country%></br>
        <h6> Please enter a password &nbsp; &nbsp; </h6>
        <%= f.password_field :password%></br></br>
        <%= f.button "create" %>
      <% end %>
    </div>
    <div class="two columns"></div>
  </div>
</div>