<div class="body-container">

  <div class="title-container">
    <span class="add-title">Change the Title</span>
  </br></br>
    <input type="text" id="title" name="title"style="width: 300px;" />
  </div>





    <h2 class="title-bar"> <%=Story.find(params[:previous_story_id]).title %> </h2>
  <div class="box-container">
    <div class="story">

    </div>
    <div class="words">
    </div>
  </div>

  <div class="word-score">

    <div class="word-count">
      <div class="count-chocula"></div>
    </div>

    <div class="new-word-button">
      </br></br>
        Grab a New Word
    </div>

    <div class="word-phrase">
      </br></br>
      <div class="phrase">
      </div>

    </div>

  </div>



  <div class="story-input">
    <span class="add-your-story"> Add to your story here! </span></br></br>
    <input type="text" id="main" style="width: 300px;"/>
    <input type="hidden" id="token" value="<%= form_authenticity_token %>" name="token"/>
    <input type="submit" id="add_snippet" id="submit"/>
  </div>


</div>








<script type="text/template" id="the-list">
  <p class="definition">
    <%%= word.word +":" %>
    <li>
    <%%= word.definition %>
    </li>
    <HR>
  </P>
</script>

<script type="text/template" id="citation-template">

  <p>
    <%%= citation.body %>
  </p>
</script>







