<h1> Hey <%= @user.name %>! Write a new story here! <h1>

<%= form_for @story, url: {action: "create"}, html: {class: "story-form"} do |f| %>
  <span> Title </span>
  <%= f.text_field :title %></br>
  <span> Add to your story! </span></br>
  <%= f.text_area :body, size: "80x50" %></br>
  <%= f.submit "Create" %>

<% end %>
