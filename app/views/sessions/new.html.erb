
<div class="container">
  <div class="row">
    <div class="two columns"></div>
    <div class="eight columns">
      <h5> Sign in! </h5>
      <%= form_tag(session_path) do %>
        <span class="helvetica">Enter your email </span> &nbsp; &nbsp;
        <%= text_field_tag :email, nil, :class => 'login-input' %></br>
        <span class='helvetica'>Enter your password</span> &nbsp; &nbsp;
        <%= password_field_tag :password , nil, :class => 'login-input' %></br></br>
        <%= button_tag 'Login'%>
      <% end %>
    </div>
  </div>

</br>
</div>





